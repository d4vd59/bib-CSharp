<Window x:Class="Quizduell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizduell"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Kategorien" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="CategoriesGrid" Height="200" Margin="0,0,0,20"/>
            <Button Content="Kategorien laden" Click="LoadCategories_Click" Width="150"/>
        </StackPanel>
    </Grid>
</Window>
