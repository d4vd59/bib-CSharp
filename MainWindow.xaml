<Window x:Class="Quizduell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizduell"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Gib deinen Namen ein:" FontSize="16" Grid.Row="0" Margin="0,0,0,10"/>
        <TextBox Name="NameTextBox" Grid.Row="1" Height="30" FontSize="14" Margin="0,0,0,10"/>
        <Button Content="Start" Grid.Row="2" Height="30" Width="100"/>
    </Grid>
</Window>
